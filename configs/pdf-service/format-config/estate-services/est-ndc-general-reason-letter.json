{
    "key": "est-ndc-general-reason-letter",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [{
                "columns": [{
                        "image": "{{logo}}",
                        "width": 50,
                        "alignment": "left"
                    },
                    {

                        "alignment": "center",
                        "stack": [{
                                "text": "{{header}}",
                                "color": "#17202A",
                                "fontSize": 14,
                                "bold": true
                            },
                            {
                                "text": "{{colony_branch}}",
                                "color": "#17202A",
                                "fontSize": 12,
                                "bold": true
