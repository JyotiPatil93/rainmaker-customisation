{
    "key": "est-mortgage-freehold",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [{
                "columns": [{
                        "image": "{{logo}}",
                        "width": 50,
                        "alignment": "left"
                    },
                    {

                        "alignment": "center",
                        "stack": [{
                                "text": "{{header}}",
                                "color": "#17202A",
                                "fontSize": 14,
                                "bold": true
                            },
                            {
                                "text": "{{colony_branch}}",
                                "color": "#17202A",
                                "fontSize": 12,
                                "bold": true
                            },
                            {
                                "text": "New Deluxe Building, Sector 17-E, Chandigarh",
                                "fontSize": 12
                            }
                        ]
                    }

                ]

            },
            {
                "margin": [0, 20, 10, 10],
                "columns": [{
                        "text": "No. MC/Estate/2019/ {{applicationNumber}}",
                        "alignment": "left",
                        "style": "pdfContent"
                    },
                    {
                        "text": "Dated",
                        "alignment": "right",
                        "style": "pdfContent"
                    }

                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "text": "To",
                "alignment": "left",
                "style": "pdfContent"
            },
            {
                "margin": [50, 10, 0, 0],
                "stack": [{
                        "text": "{{ownerName}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{address}}",
                        "style": "pdfContent",
                        "width": "*"
                    }


                ]
            },
            {
                "margin": [0, 10, 0, 0],
                "columns": [{
                        "text": "Sub:-",
                        "style": "pdfContent",
                        "bold": true,
                        "width": "auto",
                        "alignment": "left"

                    },
                    {
                        "margin": [20, 0, 0, 0],
                        "width": "*",
                        "text": [{
                                "text": "Intimation to mortgage against Booth/SCO/SCF/Residential Site No. "
                            },
                            {
                                "text": "{{siteNumber}} ",
                                "bold":true
                            },
                            {
                                "text": "Manimajra, U.T., Chandigarh "
                            }
                        ],
                        "style": "pdfContent"
                    }
                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "style": "pdfContent",
                "preserveLeadingSpaces": true,
                "text": "             Reference your request dated  on the subject cited above. "
            },
            {
                "margin": [0, 20, 0, 0],
                "style": "pdfContent",
                "preserveLeadingSpaces": true,
                "text": "             In this connection, it intimated that your letter under reference has been kept on record for future references, however, the site under consideration is free hold property and permission to mortgage is not required. Therefore, this office will not be responsible for any litigation arises in future, as the whole liability shall bear by you solely in case of any litigation, if any. "
            },
            {
                "margin": [0, 20, 0, 0],
                "alignment": "right",
                "stack": [{
                        "text": "Section Officer (E).",
                        "style": "pdfContent",
                        "bold": true
                    },
                    {
                        "text": "Municipal Corporation, ",
                        "style": "pdfContent",
                        "bold": true

                    },
                    {
                        "text": "Chandigarh ",
                        "style": "pdfContent",
                        "bold": true

                    }

                ]
            },
            {
                "margin": [0, 20, 10, 10],
                "columns": [{
                        "text": "Endst. No. MC/Estate/2019/",
                        "style": "pdfContent",
                        "alignment": "left"
                    },
                    {
                        "text": "Dated:",
                        "style": "pdfContent",
                        "alignment": "right"
                    }
                ]
            },
            {
                "stack": [{
                    "text": " Copy of the above is forwarded to_________ for information and necessary action please  ",
                    "style": "pdfContent"
                }]
            }


        ],
        "styles": {
            "pdfContent": {
                "fontSize": 10
            }

        }
    }
}