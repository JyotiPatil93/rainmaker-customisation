{
    "key": "est-mortgage-freehold",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [
          
            {
                "style": "noc-head",
                "table": {
                  "widths": [
                   50, "*"
                  ],
                  "body": [
                    [
                     {
                       "image": "{{logo}}",
                       "width": 50,
                       "margin": [8, 10, 10, 0]
                     },
                     {
                       "stack": [
                         {
                           "text": "{{header}}",
                           "style": "receipt-logo-header"
                         },
                         {
                           "text":"{{colony_branch}}",
                           "style":"receipt-logo-sub-header"
                         },
                         {
                            "text": "New Deluxe Building, Sector 17-E, Chandigarh",
                            "style":"receipt-logo-sub-header"
                        }
                       ],
                       "alignment": "center",
                         "margin": [
                           0,
                           12,
                           0,
                           0
                         ]
                     }
                    ]
                  ]
                },
                "layout": "noBorders"
            },
            {
                "style": "pt-reciept-citizen-header",
                "columns": [
                  {
                    "width":"auto",
                    "text": [
                      {
                        "text": "No.MC/Estate/{{year}}/ ",
                        "bold": true
                      },
                      {
                        "text": "{{applicationNumber}}",
                        "bold": false
                      }
                    ],
                    "alignment": "left"
                  },
                  {
                    "text": "",
                    "width":"*"
                  },
                  {
                    "width":"auto",
                    "text": [
                      {
                        "text": "Dated ",
                        "bold": true
                      },
                      {
                        "text": "{{approvalDate}}",
                        "bold": false
                      }
                    ],
                    "alignment": "right"
                  }
                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "text": "To",
                "alignment": "left",
                "style": "pdfContent"
            },
            {
                "margin": [50, 10, 0, 0],
                "stack": [{
                        "text": "{{ownerName}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{address}}",
                        "style": "pdfContent",
                        "width": "*"
                    }


                ]
            },
            {
                "margin": [0, 10, 0, 0],
                "columns": [{
                        "text": "Sub:-",
                        "style": "pdfContent",
                        "bold": true,
                        "width": "auto",
                        "alignment": "left"

                    },
                    {
                        "margin": [20, 0, 0, 0],
                        "width": "*",
                        "text": [{
                                "text": "Intimation to mortgage against Booth/SCO/SCF/Residential Site No. "
                            },
                            {
                                "text": "{{siteNumber}} ",
                                "bold":true
                            },
                            {
                                "text": "Manimajra, U.T., Chandigarh "
                            }
                        ],
                        "style": "pdfContent"
                    }
                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "style": "pdfContent",
                "preserveLeadingSpaces": true,
                "text": "             Reference your request dated  {{submissionDate}} on the subject cited above. "
            },
            {
                "margin": [0, 20, 0, 0],
                "style": "pdfContent",
                "preserveLeadingSpaces": true,
                "text": "             In this connection, it intimated that your letter under reference has been kept on record for future references, however, the site under consideration is free hold property and permission to mortgage is not required. Therefore, this office will not be responsible for any litigation arises in future, as the whole liability shall bear by you solely in case of any litigation, if any. "
            },
            {
                "margin": [0, 20, 0, 0],
                "alignment": "right",
                "stack": [{
                        "text": "Section Officer (E).",
                        "style": "pdfContent",
                        "bold": true
                    },
                    {
                        "text": "Municipal Corporation, ",
                        "style": "pdfContent",
                        "bold": true

                    },
                    {
                        "text": "Chandigarh ",
                        "style": "pdfContent",
                        "bold": true

                    }

                ]
            },
            {
                "margin": [0, 20, 10, 10],
                "columns": [{
                        "text": "Endst. No. MC/Estate/{{year}}/{{applicationNumber}}",
                        "style": "pdfContent",
                        "alignment": "left",
                        "width":"auto"
                    },
                    {
                        "text": "Dated:_____________",
                        "style": "pdfContent",
                        "alignment": "right",
                        "width":"*"
                    }
                ]
            },
            {
                "stack": [{
                    "text": " Copy of the above is forwarded to_________ for information and necessary action please  ",
                    "style": "pdfContent"
                }]
            }


        ],
        "styles": {
            "pdfContent": {        
                "color": "#000000",
                "bold": false,
                "fontSize": 11,
                "fontWeight": 400,
                "margin": [
                  3,
                  0,
                  0,
                  0
                ]
            },
            "pt-reciept-citizen-header": {
                "fontSize": 12,
                "bold": true,
                "margin": [
                  0,
                  8,
                  0,
                  0
                ],
                "color": "#484848"
              },
            "receipt-logo-header": {
                "color": "#484848",
                "fontSize": 14,
                "bold": true,
                "letterSpacing": 0.74,
                "margin": [
                  0,
                  0,
                  0,
                  5
                ]
              },
              "receipt-logo-sub-header": {
                "color": "#484848",
                "fontFamily": "Roboto",
                "fontSize": 13,
                "letterSpacing": 1.6,
                "margin": [
                  0,
                  6,
                  0,
                  0
                ]
              },
              "noc-head": {
                "margin": [
                  -25,
                  -25,
                  0,
                  1
                ]
              }

        }
    }
}