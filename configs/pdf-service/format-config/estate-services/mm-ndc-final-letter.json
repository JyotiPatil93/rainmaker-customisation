{
  "key": "mm-ndc-final-letter",
  "config": {
    "defaultStyle": {
      "font": "Cambay"
    },
    "content": [

      {
        "style": "noc-head",
        "table": {
          "widths": [
            50, "*"
          ],
          "body": [
            [{
                "image": "{{logo}}",
                "width": 50,
                "margin": [8, 10, 10, 0]
              },
              {
                "stack": [{
                  "text": "OFFICE OF THE ADDITIONAL COMMISSIONER-I,SUB OFFICE, MANIMAJRA,MUNICIPAL CORPORATION, CHANDIGARH",
                  "style": "pt-reciept-citizen-header"
                }],
                "alignment": "center",
                "margin": [
                  0,
                  12,
                  0,
                  0
                ]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },
      {
        "margin": [0, 20, 10, 10],
        "style": "pt-reciept-citizen-header",
        "columns": [{
            "width": "auto",
            "text": [{
                "text": "Memo No. ",
                "bold": true
              },
              {
                "text": "{{applicationNumber}}",
                "bold": false
              }
            ],
            "alignment": "left"
          },
          {
            "text": ""
          },
          {
            "width": "auto",
            "text": [{
                "text": "Dated ",
                "bold": true
              },
              {
                "text": "{{approvalDate}}",
                "bold": false
              }
            ],
            "alignment": "right"
          }
        ]
      },
      {
        "margin": [0, 20, 0, 0],
        "text": "To",
        "alignment": "left",
        "style": "pdfContent"
      },
      {
        "margin": [0, 10, 0, 0],
        "stack": [{
            "preserveLeadingSpaces": true,
            "text": "               {{name}}",
            "style": "pdfContent",
            "width": "*"
          },
          {
            "preserveLeadingSpaces": true,
            "text": "               {{address}}",
            "style": "pdfContent",
            "width": "*"
          }

        ]
      },
      {
        "margin": [0, 10, 0, 0],
        "columns": [{
            "text": "Sub:-",
            "style": "pdfContent",
            "bold": true,
            "width": "auto",
            "alignment": "left"

          },
          {
            "margin": [20, 0, 0, 0],
            "width": "*",
            "text": "Issuance of No due Certificate in respect of House/Shop No. {{houseNumber}} , Mohalla {{mohalla}} Manimajra U.T, Chandigarh.",
            "style": "pdfContent",
            "bold": true
          }
        ]
      },
      {
        "margin": [0, 20, 0, 0],
        "preserveLeadingSpaces": true,
        "style": "pdfContent",
        "text": "              Reference on the subject noted above."
      },
      {
        "margin": [0, 5, 0, 0],
        "style": "pdfContent",
        "text": [{
            "preserveLeadingSpaces": true,
            "text": "              It is to inform you that as per record of Municipal Corporation Chandigarh the ownership of House/Shop No. "
          },
          {
            "text": "{{houseNumber}}",
            "bold": true
          },
          {
            "text": " Mohalla "
          },
          {
            "text": "{{mohalla}}",
            "bold": true
          },
          {
            "text": " Manimajra area measuring  "
          },
          {
            "text": "{{areaSqft}} ",
            "bold": true
          },
          {
            "text": "Sq. Yds, stands in the name of Sh "
          }, {
            "text": "{{name}}",
            "bold": true
          },
          {
            "text": " S/o Sh "
          },
          {
            "text":"{{fatherOrHusbandName}}",
            "bold":true
          },
          {
            "text":" and nothing is due till date, subject to post audit and you will have to pay the due, if any found at any later stage."
          }

        ]
      },

      {
        "alignment": "right",
        "margin": [0, 20, 0, 0],
        "style": "pdfContent",
        "bold": true,
        "stack": [{
            "text": " AC (F&A),"
          },
          {
            "text": "For Additional Commissioner-I, "
          },
          {
            "text": "Municipal Corporation, Chandigarh. "
          }
        ]
      }


    ],
    "styles": {
      "pdfContent": {
        "color": "#000000",
        "bold": false,
        "fontSize": 11,
        "fontWeight": 400,
        "margin": [
          3,
          0,
          0,
          0
        ]
      },
      "pt-reciept-citizen-header": {
        "fontSize": 12,
        "bold": true,
        "margin": [
          0,
          8,
          0,
          0
        ],
        "color": "#484848"
      },
      "receipt-logo-header": {
        "color": "#484848",
        "fontSize": 14,
        "bold": true,
        "letterSpacing": 0.74,
        "margin": [
          0,
          0,
          0,
          5
        ]
      },
      "receipt-logo-sub-header": {
        "color": "#484848",
        "fontFamily": "Roboto",
        "fontSize": 13,
        "letterSpacing": 1.6,
        "margin": [
          0,
          6,
          0,
          0
        ]
      },
      "noc-head": {
        "margin": [
          -25,
          -25,
          0,
          1
        ]
      }

    }
  }
}