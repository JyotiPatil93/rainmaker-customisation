{
    "key": "rp-mortgage-letter",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [  {
            "style": "noc-head",
            "table": {
                "widths": ["3%", "90%", "*"],
                "body": [
                    [{
                            "text": ""
                        },
                        {
                            "text": "नगर निगम चण्डीगढ़/MUNICIPAL CORPORATION, CHANDIGARH",
                            "style": "receipt-logo-header",
                            "alignment": "center",
                            "fillColor": "#F8F9FA"
                        },
                        {
                            "rowSpan": 4,
                            "alignment": "center",
                            "image": "{{watermark}}",
                            "width": 60,
                            "margin": [0, 10, 0, 0]
                        }
                    ],
                    [{
                            "text": ""
                        },
                        {
                            "alignment": "center",
                            "styles": "receipt-logo-sub-header",
                            "text": [{
                                "text": "(New Delux Building, Sector-17, UT Chandigarh) ☎ 0172-5021503 "
                            }]
                        },
                        {}
                    ],
                    [{
                            "text": ""
                        },
                        {
                            "alignment": "center",
                            "text": "(Colony Branch)",
                            "italics": true,
                            "bold": true,
                            "fillColor": "#F8F9FA"
                        },
                        {}
                    ],
                    [{}, {}, {}]
                ]
            },
            "layout": "noBorders"
        },
            {
                "margin": [0, 20, 0, 0],
                "columns":[{
                  "text": "To",
                  "alignment": "left"
                },
                {
                  "text":[
                      {
                        "style": "pdfContent",
                        "text": "{{dateApprovalLabel}} :"
                      },
                      {
                          "text":"{{approvalDate}}",
                          "style":"receipt-logo-sub-header"
                      }
                  ],
                  "alignment": "right"
                  
                }],
                
                "style": "pdfContent"
            },
            {
                "margin": [50, 10, 0, 0],
                "stack": [{
                        "text": "The Head,",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Name of Financial Institute,",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Chandigarh.",
                        "style": "pdfContent",
                        "width": "*"
                    }

                ]
            },
            {
                "margin": [50, 10, 0, 0],
                "stack":[
                    {
                        "text": "Memo no/Allotment number {{allotmentNumber}}",
                        "style": "pdfContent",
                        "bold":true
                    },
                    {
                    "text": "Dated {{allotmentStartDate}}",
                        "style": "pdfContent",
                        "bold":true
                    }
                ]     
                  
            },
            {
                "margin": [0, 10, 0, 0],
                "columns": [{
                        "text": "Subject:",
                        "style": "pdfContent",
                        "bold": true,
                        "width": "auto",
                        "alignment": "left"

                    },
                    {
                        "margin": [20, 0, 0, 0],
                        "width": "*",
                        "text": "Lien against the property.",
                        "style": "pdfContent",
                        "bold": true
                    }
                ]
            },
            {
                "margin": [50, 20, 0, 0],
                "style": "pdfContent",
                "text":[
                    {
                        "text": "Reference your letter No. "
                    },
                    {
                        "text":"{{sanctionLetterNumber}} ",
                        "bold":true
                    },
                    {
                        "text":"dated "
                    },
                    {
                        "text":"{{sanctionDate}} ",
                        "bold":true
                    },
                    {
                        "text":"on the subject cited above."
                    }
                ],
                "italics":true
            },
            {
                "margin": [0, 0, 0, 0],
                "style": "pdfContent",
                "text": [{
                        "text": "The lien is hereby noted in respect of property i.e. Transit Site No. "
                    },
                    {
                        "text":"{{transitNumber}} , {{colony}} ",
                        "bold":true
                    },
                    {
                        "text": "owner Sh "
                    },
                    {
                        "text":"{{name}} ",
                        "bold":true
                    },
                    {
                        "text": "on account of loan of Rs. "
                    },
                    {
                        "text":"{{mortgageAmount}} ",
                        "bold":true
                    },
                    {
                        "text":"raised from (Bank) subject to the condition that the 1 st charge will be in favour of Govt. against the property. "
                    }
                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "columns":[{
                    "text":"Endst. No.",
                    "style": "pdfContent",
                    "alignment":"left",
                    "width":"auto",
                    "bold":true
                },
            {
                "text":"",
                "width":"*"
            },
            {
                "text":"Dated",
                "width":"auto",
                "style": "pdfContent",
                "alignment":"right",
                "bold":true

            }] 
            },
            {
                "margin": [0, 0, 0, 0],
                "style": "pdfContent",
                "text": [{
                        "text": "A copy is forwarded to Sh. "
                    },
                    {
                        "text":"{{name}} ",
                        "bold":true
                    },
                    {
                        "text": "owner ,Transit site No. "
                    },
                   
                    {
                        "text":"{{transitNumber}} ",
                        "bold":true
                    },
                    {
                        "text": "{{colony}}"
                    }
                ]  
            },
            {
                "margin": [0, 10, 0, 0],
                "alignment":"right",
                "stack":[
                    {
                        "text": "Superintendent (Colony)",
                        "style": "pdfContent"
                    },
                    {
                        "text": "Municipal Corporation,",
                        "style": "pdfContent"
                    },
                    {
                        "text": "Chandigarh.",
                        "style": "pdfContent"
                    }
                ]     
            },
            {
                "margin":[0,330,0,0],
                "columns": [{
                    "image": "{{footerLeft}}",
                    "width": 50,
                    "margin": [20, 0, 0, 20]
      
                }, {
                    "text": "नगर निगम चण्डीगढ़/MUNICIPAL CORPORATION, CHANDIGARH",
                    "styles": "receipt-logo-sub-header",
                    "alignment": "center",
                    "width": "*"
                }, {
                    "image": "{{footerRight}}",
                    "width": 40,
                    "margin": [-20, 0, 0, -30]
                }]
            }

        ],
        "styles": {
            "pdfContent": {
                "fontSize": 10
            },
            "noc-head": {
                "margin": [
                  -25,
                  -30,
                  0,
                  1
                ]
              }      
        }
    }
} 