{
    "key": "rp-dc-allotment-letter",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [
          {
            "style": "noc-head",
            "table": {
                "widths": ["3%", "90%", "*"],
                "body": [
                    [{
                            "text": ""
                        },
                        {
                            "text": "नगर निगम चण्डीगढ़/MUNICIPAL CORPORATION, CHANDIGARH",
                            "style": "receipt-logo-header",
                            "alignment": "center",
                            "fillColor": "#F8F9FA"
                        },
                        {
                            "rowSpan": 4,
                            "alignment": "center",
                            "image": "{{watermark}}",
                            "width": 60,
                            "margin": [0, 10, 0, 0]
                        }
                    ],
                    [{
                            "text": ""
                        },
                        {
                            "alignment": "center",
                            "styles": "receipt-logo-sub-header",
                            "text": [{
                                "text": "(New Delux Building, Sector-17, UT Chandigarh) ☎ 0172-5021503 "
                            }]
                        },
                        {}
                    ],
                    [{
                            "text": ""
                        },
                        {
                            "alignment": "center",
                            "text": "(Colony Branch)",
                            "italics": true,
                            "bold": true,
                            "fillColor": "#F8F9FA"
                        },
                        {}
                    ],
                    [{}, {}, {}]
                ]
            },
            "layout": "noBorders"
        },
            {
                "margin": [0, 20, 0, 0],
                "columns":[{
                  "text": "To",
                  "alignment": "left"
                },
                {
                  "text":[
                      {
                        "style": "pdfContent",
                        "text": "{{dateApprovalLabel}} :"
                      },
                      {
                          "text":"{{approvalDate}}",
                          "style":"receipt-logo-sub-header"
                      }
                  ],
                  "alignment": "right"
                  
                }],
                
                "style": "pdfContent"
            },
            {
                "margin": [50, 10, 0, 0],
                "stack": [{
                        "text": "{{name}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{colony}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{area}} ,{{pincode}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Memo no/Allotment number {{allotmentNumber}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Dated {{allotmentDate}}",
                        "style": "pdfContent",
                        "width": "*"
                    }

                ]
            },
            {
                "margin": [0, 10, 0, 0],
                "columns": [{
                        "text": "Subject:",
                        "style": "pdfContent",
                        "bold": true,
                        "width": "auto",
                        "alignment": "left"

                    },
                    {
                        "margin": [10, 0, 0, 0],
                        "width": "*",
                        "text": "Supply of duplicate copy of Allotment letter of Transit Site No {{transitNumber}}, {{colony}}, {{area}}, issued by the Estate Office/Municipal Corporation,Chandigarh.",
                        "style": "pdfContent",
                        "bold": true
                    }
                ]
            },
            {
                "margin": [50, 20, 0, 0],
                "style": "pdfContent",
                "text": "Reference your application/request dated {{creationDate}} on the subject cited above."
            },
            {
                "margin": [50, 20, 0, 0],
                "style": "pdfContent",
                "text": [
                    {
                        "text":"The duplicate Allotment Letter No."
                    },
                    {
                    "text":"{{allotmentNumber}} " ,
                        "bold":true
                    },
                    {
                        "text":"Dated {{allotmentDate}} in respect of Transit Site No. "
                    },
                    {
                        "text":"{{transitNumber}}, {{colony}}, {{area}} ."
                        ,
                        "bold":true
                    },
                    {
                        "text":"allotted to Sh./Smt."
                    },
                    {
                        "text":" {{name}}",
                        "bold":true
                    },
                    {
                        "text":" is hereby attached, duly attested."
                    }
                    
            ]
            },
            {
                "margin": [0, 20, 0, 0],
                "alignment": "right",
                "stack": [{
                        "text": "Superintendent(C),",
                        "style": "pdfContent"
                    },
                    {
                        "text": "Municipal Corporation,",
                        "style": "pdfContent"
                    },
                    {
                        "text": "Chandigarh.",
                        "style": "pdfContent"
                    }

                ]
            },
            {
                "margin":[0,310,0,0],
                "columns": [{
                    "image": "{{footerLeft}}",
                    "width": 50,
                    "margin": [20, 0, 0, 20]
      
                }, {
                    "text": "नगर निगम चण्डीगढ़/MUNICIPAL CORPORATION, CHANDIGARH",
                    "styles": "receipt-logo-sub-header",
                    "alignment": "center",
                    "width": "*"
                }, {
                    "image": "{{footerRight}}",
                    "width": 40,
                    "margin": [-20, 0, 0, -30]
                }]
            }


        ],
        "styles": {
            "pdfContent": {
                "color": "#000000",
                "bold": false,
                "fontSize": 11,
                "fontWeight": 400,
                "margin": [
                  3,
                  0,
                  0,
                  0
                ]
            },
            "receipt-logo-header": {
                "color": "#484848",
                "fontSize": 14,
                "bold": true,
                "letterSpacing": 0.74,
                "margin": [
                  0,
                  0,
                  0,
                  0
                ]
              },
              "receipt-logo-sub-header": {
                "color": "#484848",
                "fontFamily": "Roboto",
                "fontSize": 13,
                "letterSpacing": 1.6,
                "margin": [
                  0,
                  6,
                  0,
                  0
                ]
              },
              "noc-head": {
                "margin": [
                  -25,
                  -25,
                  0,
                  1
                ]
              }

        }
    }
} 